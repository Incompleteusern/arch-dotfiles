#!/bin/bash
# scripts by adi1090x

## Get data
STATUS="$(playerctl status)"
MUSIC_DIR="$HOME/Music"

## Get status
get_status() {
	if [[ $STATUS == *"Playing"* ]]; then
		echo ""
	else
		echo "奈"
	fi
}

## Get song
get_song() {
	song=`playerctl metadata "xesam:title"`
	if [[ -z "$song" ]]; then
		echo "Offline"
	else
		echo "$song"
	fi
}

## Get artist
get_artist() {
	artist=`playerctl metadata "xesam:artist"`
	if [[ -z "$artist" ]]; then
		echo ""
	else
		echo "$artist"
	fi
}

## Get time
get_time() {
	atime=`echo 'print $(($(playerctl position) * 100000000 / $(playerctl metadata "mpris:length")))' | zsh`
        atime=$(printf "%0.0f\n" "$atime")
        if [[ -z "$atime" ]]; then
                echo "10"
        else
                echo "$atime"
        fi

}

## Get cover
get_cover() {
	# cover=`playerctl metadata "mpris:artUrl"`

	# Check if the file has a embbeded album art
	if [[ -z "$cover" ]]; then
		echo "$cover"
	else
		echo "images/music.png"
	fi
}

## Set position

## Execute accordingly
if [[ "$1" == "--song" ]]; then
	get_song
elif [[ "$1" == "--artist" ]]; then
	get_artist
elif [[ "$1" == "--status" ]]; then
	get_status
elif [[ "$1" == "--time" ]]; then
	get_time
elif [[ "$1" == "--cover" ]]; then
	get_cover
# elif [[ "$1" == "--toggle" ]]; then
#	mpxc -q toggle
# elif [[ "$1" == "--next" ]]; then
#	{ mpxc -q next; get_cover; }
# elif [[ "$1" == "--prev" ]]; then
#	{ mpxc -q prev; get_cover; }
fi
